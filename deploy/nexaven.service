[Unit]
Description=Nexaven Website Backend Service
After=network.target

[Service]
Type=simple
User=nexaven
WorkingDirectory=/var/www/nexaven/backend
ExecStart=/usr/bin/node /var/www/nexaven/backend/server.js
Restart=always
RestartSec=10
StandardOutput=append:/var/log/nexaven/backend.log
StandardError=append:/var/log/nexaven/backend.log
Environment="NODE_ENV=production"
Environment="PORT=5000"

[Install]
WantedBy=multi-user.target
